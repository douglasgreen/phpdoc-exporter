{
    "name": "douglasgreen/phpdoc-exporter",
    "description": "CLI tool to export PHPDoc comments to Markdown with standards validation",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas.s.green@protonmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "douglasgreen/opt-parser": "^0.6.1",
        "nikic/php-parser": "^5.4",
        "phpstan/phpdoc-parser": "^1.33"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.94.0",
        "phpstan/phpstan": "^2.1.39",
        "rector/rector": "^2.3.6"
    },
    "autoload": {
        "psr-4": {
            "DouglasGreen\\PhpDocExporter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DouglasGreen\\PhpDocExporter\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform-check": true
    },
    "scripts": {
        "lint": [
            "php-cs-fixer fix --dry-run --verbose",
            "phpstan analyse",
            "rector process --dry-run"
        ],
        "lint:fix": [
            "php-cs-fixer fix",
            "rector process"
        ]
    },
    "bin": [
        "bin/phpdoc-exporter"
    ]
}
