{
    "name": "douglasgreen/phpdoc-exporter",
    "description": "CLI tool to export PHPDoc comments to Markdown with standards validation",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglasgreen@example.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "phpstan/phpdoc-parser": "^1.33"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.11",
        "phpstan/phpstan-strict-rules": "^1.6",
        "squizlabs/php_codesniffer": "^3.10",
        "friendsofphp/php-cs-fixer": "^3.59"
    },
    "autoload": {
        "psr-4": {
            "DouglasGreen\\PhpDocExporter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DouglasGreen\\PhpDocExporter\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/phpdoc-exporter"
    ],
    "scripts": {
        "cs:check": "phpcs --standard=phpcs.xml",
        "cs:fix": "php-cs-fixer fix --allow-risky=yes",
        "stan": "phpstan analyse --configuration=phpstan.neon",
        "test": "phpunit --configuration=phpunit.xml",
        "qa": [
            "@cs:check",
            "@stan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "platform-check": true
    }
}
