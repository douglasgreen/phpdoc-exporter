{
  "modified": "2026-02-28",
  "name": "douglasgreen/phpdoc-exporter",
  "description": "CLI tool to export PHPDoc comments to Markdown with standards validation",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.3",
    "douglasgreen/opt-parser": "^0.7.4",
    "nikic/php-parser": "^5.7",
    "phpstan/phpdoc-parser": "^1.33"

  },
  "require-dev": {
    "douglasgreen/php-linter": "^1.0.0",
    "friendsofphp/php-cs-fixer": "^3.94.2",
    "phpstan/phpstan": "^2.1.40",
    "rector/rector": "^2.3.8"
  },
  "autoload": {
    "psr-4": {
      "DouglasGreen\\PhpDocExporter\\": "src/",
      "DouglasGreen\\PhpDocExporter\\Tests\\": "tests/"
    }
  },
  "config": {
    "platform": {
      "php": "8.3"
    },
    "sort-packages": true
  },
  "scripts": {
    "lint": [
      "php-linter",
      "php-cs-fixer fix --dry-run --verbose",
      "phpstan analyse",
      "rector process --dry-run"
    ],
    "lint:fix": [
      "php-cs-fixer fix",
      "rector process"
    ],
    "test": [
      "phpunit"
    ],
    "test:unit": [
      "phpunit --testsuite=Unit"
    ],
    "test:integration": [
      "phpunit --testsuite=Integration"
    ],
    "qa": [
      "@lint"
    ]
  }
}
